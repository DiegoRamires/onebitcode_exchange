<div class="exchange_box">
  <div class="card">
    <div class="card-header text-center">
      Simule sua convers√£o
    </div>
    <div class="card-block">
      <%= form_tag("/exchange", method: "post", id: "exchange_form") do %>
        <div class="local_currency">
          <div class="form-group">
            <p class="title">Moeda Local</p>
            <%= select_tag "currency", options_for_select(currency_select, "BRL"), class: "form-control", id: "currency" %>
          </div>
          <div class="form-group">
            <input type="number" name="quantity" id="quantity" class="form-control" placeholder="Digite valor ($10)" step="any" required>
          </div>
        </div>
        <div class="destination_currency">
          <div class="form-group">
            <p class="title">Moeda Pretendida</p>
            <%= select_tag "currency_destination", options_for_select(currency_select, "USD"), class: "form-control", id: "currency_destination"%>
          </div>
          <div class="form-group">
            <input type="text" id="result" name="result" class="form-control" placeholder="Resultado" readonly>
          </div>
          <div class="change col-md-12">
            <div class="col-md-8">
              <%= image_tag '/troca.png', id: 'troca', class: 'img-fluid'  %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
